<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
      <div class="jumbotron" id="createJumbo">
                    <h2 class="createNewEchoes">Create New Echoes</h2>

                    <form class="createForm" action="/createEchoes" method="POST">

                    <div class="form-group">
                    <select data-placeholder="" class="form-control"  name="categoryID" style="width:350px;">
                        <option  value="">Select A Topic Category</option>
                        {{#each allCategory}}

                        <option value={{this.categoryID}}>{{this.categoryName}}</option>


                        {{/each}}
                    </select>
                     </div>

                        <div class="form-group">
                        <input type="text" class="form-control" name="topicName" aria-describedby="emailHelp" placeholder="Topic Name"/>
                        </div>

                        <div class="form-group">
                        <textarea type="text" class="form-control" name="topicDescription" aria-describedby="emailHelp" placeholder="Topic Description"></textarea>
                        </div>

                            <h2 class="EchoesLocation">Echoes Location Tag (Optional)</h2>

                        <div class="form-group">
                        <input type="text" class="form-control" name="topicCity" aria-describedby="emailHelp" placeholder="Topic City">
                        </div>

                        <div class="form-group">
                        <input type="text" class="form-control" name="topicState" placeholder="Topic State">
                        </div>

                        <div class="form-group">
                        <input type="text" class="form-control" name="topicPostalCode" placeholder="Topic Postal Code">
                        </div>

                        <div class="form-group">
                        <input type="text" class="form-control" name="topicCountry" placeholder="Topic Country">
                        </div>


            <button type="submit" class="btn btn-danger pull-right" id="findTopic">Create Echo</button>
     </form>
 </div>
</div>
</div>
